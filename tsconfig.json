{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "lib": ["EsNext"],
    "sourceMap": false,
    "inlineSourceMap": true,
    "removeComments": true,
    "incremental": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
